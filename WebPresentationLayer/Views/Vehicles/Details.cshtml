@model LogicLayer.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<h1>Offer details</h1>

<div class="mt-5 col-md-12">
</div>

<h4>Vehicle</h4>
<hr />
<div class="mt-4 col-md-12">
</div>

<div>
    <h2 class="display-5">@Html.DisplayNameFor(model => model.Manifacturer)</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.DisplayFor(model => model.Manifacturer)</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">@Html.DisplayNameFor(model => model.Model)</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.DisplayFor(model => model.Model)</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">Year of production</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.DisplayFor(model => model.Year)</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">@Html.DisplayNameFor(model => model.Description)</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.DisplayFor(model => model.Description)</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">Vehicle Type</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Model.GetVehicleTypeString()</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">Vehicle Color</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Model.GetVehicleColorString()</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">@Html.DisplayNameFor(model => model.Images)</h2>
    <div class="mt-1 col-md-12">
    </div>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.Images)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="data:image/png;base64,@(Model.Images.Count > 0 && item  != null && item.Length > 0 ? Convert.ToBase64String(item) : string.Empty)"
                                 alt="Image" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr class="border-2 border-top" />
    <h2 class="display-5">Price in lv.</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.FormatValue($"{Model.PriceLv} lv.", null)</p>
    <hr class="border-2 border-top" />
    <h2 class="display-5">Seller contact info</h2>
    <div class="mt-1 col-md-12">
    </div>
    <p class="lead mb-4">@Html.DisplayFor(model => model.SellerContactInfo)</p>
</div>
<div class="mt-3 col-md-12">
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to Catalog</a>
</div>
