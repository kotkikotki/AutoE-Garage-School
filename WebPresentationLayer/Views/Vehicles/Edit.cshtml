@using LogicLayer.Models
@model LogicLayer.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit offer</h1>

<div class="mt-5 col-md-12">
</div>

<h4>Vehicle</h4>
<hr />
<div class="mt-4 col-md-12">
</div>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <ul class="list-unstyled ps-0">
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="Manifacturer" class="control-label"></label>
                                <input asp-for="Manifacturer" class="form-control" />
                                <span asp-validation-for="Manifacturer" class="text-danger"></span>
                            </div>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="Model" class="control-label"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="form-group">
                            <label asp-for="Year" class="control-label">Year of production</label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" ></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="VehicleType" class="control-label">Vehicle Type</label>
                                <select asp-for="VehicleType" class="form-control" asp-items="@new SelectList(EnumItems.VehicleTypes, nameof(ValueTuple<int, string>.Item1), nameof(ValueTuple<int, string>.Item2))"></select>
                                <span asp-validation-for="VehicleType" class="text-danger"></span>
                            </div>
                        </div>
                    </li>

                </ul>
            </div>
            <div class="col-sm">
                <ul class="list-unstyled ps-0">
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="VehicleColor" class="control-label">Vehicle Color</label>
                                <select asp-for="VehicleColor" class="form-control" asp-items="@new SelectList(EnumItems.VehicleColors, nameof(ValueTuple<int, string>.Item1), nameof(ValueTuple<int, string>.Item2))"></select>
                                <span asp-validation-for="VehicleColor" class="text-danger"></span>
                            </div>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="ImagesFromForm" class="control-label">Images (max. size is 1MB)</label>
                                <div class="mt-2 col-md-12">
                                </div>
                                <input asp-for="ImagesFromForm" class="" id="ImagesFromForm" accept=".jpg,.jpeg,.png" />
                            </div>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="form-group">
                            <label asp-for="PriceLv" class="control-label">Price in lv.</label>
                            <input asp-for="PriceLv" class="form-control" />
                            <span asp-validation-for="PriceLv" class="text-danger"></span>
                        </div>
                    </li>
                    <li class="mb-1">
                        <div class="" id="manifacturer-collapse">
                            <div class="form-group">
                                <label asp-for="SellerContactInfo" class="control-label">Seller contact info</label>
                                <textarea asp-for="SellerContactInfo" class="form-control" ></textarea>
                                <span asp-validation-for="SellerContactInfo" class="text-danger"></span>
                            </div>
                        </div>
                    </li>
                    <div class="mt-3 col-md-12">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary shadow-none" formnovalidate />
                    </div>
                </ul>
            </div>
        </div>
    </div>
</form>
<div class="mt-3 col-md-12">
</div>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger shadow-none">Delete</a>
<div class="mt-3 col-md-12">
</div>
<div>
    <a asp-action="Index">Back to Catalog</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    const input = document.getElementById('ImagesFromForm')
    input.removeAttribute("required");
    input.addEventListener('change', (event) => {
        const target = event.target

        if (target.files && target.files.length > 0) {
            const maxAllowedSize = 1 * 1024 * 1024; // 1MB in bytes
            let totalSize = 0;

            for (let i = 0; i < target.files.length; i++) {
                totalSize += target.files[i].size;
            }

            if (totalSize > maxAllowedSize) {
                target.value = '';
            }
        }
    })
</script>